<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/local"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginBottom="44dp"
        android:layout_marginTop="110dp"
        android:text="绑定本地服务"
        app:layout_constraintBottom_toTopOf="@+id/messenger"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/messenger"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginBottom="44dp"
        android:text="绑定Messenger远端服务"
        app:layout_constraintBottom_toTopOf="@+id/aidl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/local" />

    <Button
        android:id="@+id/aidl"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginBottom="133dp"
        android:text="绑定AIDL远端服务"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/messenger" />

</android.support.constraint.ConstraintLayout>